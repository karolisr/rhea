{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "CDSDB",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "fs": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": ["https://www.ncbi.nlm.nih.gov/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "Â© 2024 Karolis Ramanauskas",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "is.karol.cdsdb",
      "longDescription": "Phylogenetic conflict, locus-by-locus.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Phylogenetic conflict, locus-by-locus.",
      "targets": "app",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "CDSDB",
        "center": false,
        "height": 400,
        "minHeight": 400,
        "width": 500,
        "minWidth": 500,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Transparent",
        "acceptFirstMouse": true,
        "fileDropEnabled": true
      }
    ]
  }
}
