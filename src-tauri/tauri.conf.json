{
  "productName": "Rhea",
  "version": "0.0.1",
  "identifier": "is.karol.rhea",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "enableGTKAppId": true,
    "trayIcon": null,
    "windows": [
      {
        "title": "Rhea",
        "label": "rhea_window_main",
        "acceptFirstMouse": false,
        "alwaysOnTop": false,
        "width": 500,
        "height": 400,
        "minWidth": 200,
        "minHeight": 200,
        "x": 0,
        "y": 0
      }
    ],
    "security": {
      "csp": {
        "connect-src": "ipc: https:"
      }
    }
  },

  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "Â© 2024 Karolis Ramanauskas",
    "shortDescription": "Cross-platform GUI for molecular evolution enthusiasts.",
    "longDescription": "Cross-platform GUI for molecular evolution enthusiasts.",
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "description": "FASTA",
        "ext": ["fasta", "mfa"],
        "mimeType": "text/fasta",
        "name": "FASTA",
        "role": "Editor"
      }
    ],
    "linux": {},
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "resources": {
      "resources/third-party/mafft/mafft.bat": "third-party/mafft/mafft.bat",
      "resources/third-party/mafft/mafftdir/bin/*": "third-party/mafft/mafftdir/bin/",
      "resources/third-party/mafft/mafftdir/libexec/*": "third-party/mafft/mafftdir/libexec/"
    }
  },
  "$schema": "../node_modules/@tauri-apps/cli/schema.json"
}
