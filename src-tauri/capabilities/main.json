{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "local": true,
  "windows": ["main"],
  "permissions": [
    "app:default",
    "event:default",
    "menu:default",
    "os:allow-locale",
    "path:default",
    "resources:default",
    "sql:allow-close",
    "sql:allow-execute",
    "sql:allow-load",
    "sql:allow-select",
    "tray:default",
    "window:allow-start-dragging",
    "window:default",

    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.nih.gov/*" },
        { "url": "https://*.wikimedia.org/*" }
      ],
      "deny": []
    },

    {
      "identifier": "fs:default",
      "allow": [],
      "deny": []
    }
  ]
}
